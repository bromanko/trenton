{
  "name": "trenton.web.client",
  "version": "1.0.0",
  "description": "Trenton web client app",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf WebRoot/dist && rm -rf .cache",
    "build": "parcel build --public-url /dist Assets/bundle.js --out-dir WebRoot/dist/",
    "build-dev": "cp postcss.config.dev.js postcss.config.js && npm run-s build",
    "build-prod": "cp postcss.config.prod.js postcss.config.js && npm run-s build"
  },
  "author": "bromanko",
  "license": "UNLICENSED",
  "dependencies": {
    "alpinejs": "^2.6.0",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.8.6",
    "color": "^3.1.2",
    "cssnano": "^4.1.10",
    "parcel-bundler": "^1.12.4",
    "postcss-modules": "^3.2.2",
    "prettier": "2.1.1",
    "tailwindcss": "^1.7.0",
    "tailwindcss-multi-theme": "^1.0.3"
  }
}
